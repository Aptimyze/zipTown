<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">#504037</item>
        <item name="colorAccent">#504037</item>
        <item name="android:timePickerDialogTheme">@style/CustomSpinnerStyle</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomStyle">
        <item name="android:background">#0a0808</item>
        <item name="colorControlNormal">#FFFF</item>
        <item name="actionMenuTextColor">#FFFF</item>

    </style>
    <style name="CustomStyleSignUp">
        <item name="android:background">#FFFF</item>
        <item name="colorControlNormal">#FFFF</item>
        <item name="actionMenuTextColor">#FFFF</item>

    </style>
    <style name="CustomSpinnerStyle">
        <item name="android:numbersTextColor">#de0808</item>
        <item name="android:numbersSelectorColor">#88f20808</item>
        <item name="android:numbersBackgroundColor">#fff</item>
    </style>

    <style name="CustomStylePopUp">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
